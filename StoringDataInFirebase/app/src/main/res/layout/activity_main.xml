<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#AAF2CA"
    tools:context=".MainActivity">


    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="Enter your Name "
        android:inputType="text"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:id="@+id/name_ed"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="Enter your Email id"
        android:textSize="25sp"
        android:inputType="textEmailAddress"
        android:gravity="center"
        android:layout_margin="20dp"
        android:id="@+id/email_ed"
        android:layout_below="@+id/name_ed"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="Enter your Contact No..."
        android:textSize="25sp"
        android:gravity="center"
        android:layout_margin="20dp"
        android:id="@+id/cont_ed"
        android:inputType="number"
        android:layout_below="@+id/email_ed"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="Enter your Stream..."
        android:textSize="25sp"
        android:gravity="center"
        android:layout_margin="20dp"
        android:inputType="text"
        android:id="@+id/stream_ed"
        android:layout_below="@+id/cont_ed"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="Enter your Section.."
        android:textSize="25sp"
        android:gravity="center"
        android:inputType="text"
        android:layout_margin="20dp"
        android:id="@+id/section_ed"
        android:layout_below="@+id/stream_ed"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="250dp"
        android:layout_below="@+id/section_ed"
        android:id="@+id/submit_btn"
        android:layout_centerHorizontal="true"
        android:text="Submit"
        android:layout_marginTop="35dp"
        android:textSize="25sp" />

</RelativeLayout>