<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".students"
    android:orientation="vertical">


    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Student Details Page"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="50sp"
        android:layout_margin="10dp"
        />


    <RelativeLayout
        android:id="@+id/student__details_lay"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/student_name_tag"
            android:text="Name :- "
            android:textSize="28sp"
            android:gravity="center"
            android:textAlignment="center"/>

        <EditText
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:layout_width="100dp"
            android:id="@+id/student_name"
            android:layout_toRightOf="@+id/student_name_tag"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@+id/student_name_tag"
            android:inputType="textPersonName"/>
    </RelativeLayout>

    <Button
        android:id="@+id/reg_btn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:text="Show fees Record"
        android:textSize="28sp"
        android:textStyle="bold" />

</LinearLayout>