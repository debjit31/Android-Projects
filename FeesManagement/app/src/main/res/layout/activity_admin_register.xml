<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin_register"
    android:layout_margin="15dp"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create a Admin Account"
        android:textSize="35sp"
        android:textAlignment="center"
        android:textStyle="bold"
        />


    <RelativeLayout
        android:layout_marginTop="50dp"
        android:id="@+id/email_lay"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

        <TextView
            android:id="@+id/admin_name_tag"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Your Name :- "
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_margin="20dp"/>

        <EditText
            android:id="@+id/admin_name"
            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/admin_name_tag"
            android:layout_alignBaseline="@+id/admin_name_tag"
            android:inputType="textPersonName" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/admin_email_tag"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Your Email :- "
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_margin="20dp"/>

        <EditText
            android:id="@+id/admin_email"
            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:layout_toRightOf="@+id/admin_email_tag"
            android:layout_alignParentRight="true"
            android:inputType="textPersonName"
            tools:ignore="UnknownId" />
    </RelativeLayout>

    <Button
        android:id="@+id/reg_btn"
        android:layout_height="wrap_content"
        android:layout_width="300dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:text="Register"
        android:textStyle="bold"
        android:textSize="28sp"/>




</LinearLayout>